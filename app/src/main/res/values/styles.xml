<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- Text Styles -->
    <style name="TextAppearance.FridaLauncher.Headline" parent="TextAppearance.MaterialComponents.Headline6">
        <item name="android:textColor">@color/text_primary</item>
        <item name="android:textSize">20sp</item>
        <item name="android:fontFamily">sans-serif-medium</item>
    </style>

    <style name="TextAppearance.FridaLauncher.Subtitle" parent="TextAppearance.MaterialComponents.Subtitle1">
        <item name="android:textColor">@color/blue_primary</item>
        <item name="android:textSize">16sp</item>
        <item name="android:fontFamily">sans-serif-medium</item>
    </style>

    <style name="TextAppearance.FridaLauncher.Body" parent="TextAppearance.MaterialComponents.Body1">
        <item name="android:textColor">@color/text_primary</item>
        <item name="android:textSize">14sp</item>
        <item name="android:fontFamily">sans-serif</item>
    </style>

    <style name="TextAppearance.FridaLauncher.Caption" parent="TextAppearance.MaterialComponents.Caption">
        <item name="android:textColor">@color/text_secondary</item>
        <item name="android:textSize">12sp</item>
        <item name="android:fontFamily">sans-serif</item>
    </style>

    <style name="TextAppearance.FridaLauncher.Button" parent="TextAppearance.MaterialComponents.Button">
        <item name="android:textColor">@color/text_on_primary</item>
        <item name="android:textSize">14sp</item>
        <item name="android:fontFamily">sans-serif-medium</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <style name="TextAppearance.FridaLauncher.Terminal" parent="TextAppearance.MaterialComponents.Body2">
        <item name="android:textColor">@color/terminal_text</item>
        <item name="android:textSize">13sp</item>
        <item name="android:fontFamily">monospace</item>
    </style>

    <!-- Button Styles -->
    <style name="Widget.FridaLauncher.Button" parent="Widget.MaterialComponents.Button">
        <item name="android:textAppearance">@style/TextAppearance.FridaLauncher.Button</item>
        <item name="android:paddingTop">12dp</item>
        <item name="android:paddingBottom">12dp</item>
        <item name="android:paddingStart">16dp</item>
        <item name="android:paddingEnd">16dp</item>
        <item name="cornerRadius">8dp</item>
        <item name="android:minHeight">48dp</item>
        <item name="iconPadding">8dp</item>
        <item name="iconGravity">textStart</item>
        <item name="iconSize">20dp</item>
        <item name="rippleColor">#80FFFFFF</item>
        <!-- Removed problematic state list animator -->
    </style>
    
    <!-- Action Button Styles -->
    <style name="Widget.FridaLauncher.Button.Start" parent="Widget.FridaLauncher.Button">
        <item name="backgroundTint">@color/green_primary</item>
        <item name="iconTint">@color/text_on_primary</item>
        <item name="android:textColor">@color/text_on_primary</item>
    </style>
    
    <style name="Widget.FridaLauncher.Button.Stop" parent="Widget.FridaLauncher.Button">
        <item name="backgroundTint">@color/red_primary</item>
        <item name="iconTint">@color/text_on_primary</item>
        <item name="android:textColor">@color/text_on_primary</item>
    </style>
    
    <style name="Widget.FridaLauncher.Button.Install" parent="Widget.FridaLauncher.Button">
        <item name="backgroundTint">@color/blue_primary</item>
        <item name="iconTint">@color/text_on_primary</item>
        <item name="android:textColor">@color/text_on_primary</item>
    </style>
    
    <style name="Widget.FridaLauncher.Button.Uninstall" parent="Widget.FridaLauncher.Button">
        <item name="backgroundTint">@color/orange_primary</item>
        <item name="iconTint">@color/text_on_primary</item>
        <item name="android:textColor">@color/text_on_primary</item>
    </style>
    
    <style name="Widget.FridaLauncher.Button.Refresh" parent="Widget.FridaLauncher.Button">
        <item name="backgroundTint">@color/purple_primary</item>
        <item name="iconTint">@color/text_on_primary</item>
        <item name="android:textColor">@color/text_on_primary</item>
    </style>

    <!-- Card Styles -->
    <style name="Widget.FridaLauncher.Card" parent="Widget.MaterialComponents.CardView">
        <item name="cardBackgroundColor">@color/card_background</item>
        <item name="cardCornerRadius">12dp</item>
        <item name="cardElevation">2dp</item>
        <item name="strokeColor">@color/card_stroke</item>
        <item name="strokeWidth">1dp</item>
        <item name="contentPadding">16dp</item>
        <!-- Removed problematic ripple color -->
    </style>
</resources>