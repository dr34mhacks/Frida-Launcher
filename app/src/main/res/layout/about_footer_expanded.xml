<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:fillViewport="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="20dp">

        <!-- Header -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginBottom="20dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="About"
                android:textAppearance="?attr/textAppearanceHeadline6"
                android:textColor="?attr/colorPrimary" />
                
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=" â–´"
                android:textAppearance="?attr/textAppearanceHeadline6"
                android:textColor="?attr/colorPrimary" />

            <View
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_weight="1" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/backButton"
                style="@style/Widget.MaterialComponents.Button.TextButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Close"
                android:textColor="?attr/colorPrimary" />
        </LinearLayout>

        <!-- Version -->
        <TextView
            android:id="@+id/versionTextView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Version 1.2"
            android:textAppearance="?attr/textAppearanceHeadline6"
            android:textStyle="bold"
            android:layout_marginBottom="24dp" />

        <!-- v1.2 Changes -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="WHAT'S NEW IN V1.2"
            android:textStyle="bold"
            android:textSize="16sp"
            android:textColor="?attr/colorPrimary"
            android:layout_marginBottom="12dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginStart="8dp"
            android:layout_marginBottom="24dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="â€¢ Added custom flags support with saved previous flags"
                android:textAppearance="?attr/textAppearanceBody1"
                android:layout_marginBottom="8dp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="â€¢ Grouped related controls for better usability"
                android:textAppearance="?attr/textAppearanceBody1"
                android:layout_marginBottom="8dp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="â€¢ Improved UI consistency and visual feedback"
                android:textAppearance="?attr/textAppearanceBody1" />
        </LinearLayout>

        <!-- v1.0.0 Changes -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="WHAT'S NEW IN V1.0.0"
            android:textStyle="bold"
            android:textSize="16sp"
            android:textColor="?attr/colorPrimary"
            android:layout_marginBottom="12dp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="ðŸš€ NEW FEATURES"
            android:textStyle="bold"
            android:textAppearance="?attr/textAppearanceBody1"
            android:layout_marginStart="8dp"
            android:layout_marginBottom="8dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginStart="16dp"
            android:layout_marginBottom="16dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="â€¢ One-Tap Install/Uninstall: Download and launch the Frida server right from the app UI."
                android:textAppearance="?attr/textAppearanceBody1"
                android:layout_marginBottom="8dp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="â€¢ Live Logs Panel: View, copy or clear server logs in real time."
                android:textAppearance="?attr/textAppearanceBody1"
                android:layout_marginBottom="8dp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="â€¢ Version Selector: Browse all Frida server versions, with architecture detection (arm64, x86_64, etc.)."
                android:textAppearance="?attr/textAppearanceBody1" />
        </LinearLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="ðŸ› BUG FIXES"
            android:textStyle="bold"
            android:textAppearance="?attr/textAppearanceBody1"
            android:layout_marginStart="8dp"
            android:layout_marginBottom="8dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginStart="16dp"
            android:layout_marginBottom="24dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="â€¢ Fixed a crash when installedVersion LiveData was unexpectedly null."
                android:textAppearance="?attr/textAppearanceBody1"
                android:layout_marginBottom="8dp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="â€¢ Improved error messages on network/download failures."
                android:textAppearance="?attr/textAppearanceBody1" />
        </LinearLayout>

        <!-- Links Section -->
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="?android:attr/listDivider"
            android:layout_marginBottom="20dp" />

        <!-- Found issues section -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="FOUND ISSUES, BUG OR FEATURE REQUESTS"
            android:textStyle="bold"
            android:textSize="14sp"
            android:textColor="?attr/colorPrimary"
            android:layout_marginBottom="8dp" />
            
        <!-- GitHub issue link with icon -->
        <LinearLayout
            android:id="@+id/issuesLinkTextView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="12dp"
            android:gravity="center_vertical"
            android:background="?attr/selectableItemBackground"
            android:clickable="true"
            android:focusable="true"
            android:layout_marginBottom="16dp">
            
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="ðŸ› "
                android:textSize="16sp"
                android:layout_marginEnd="8dp" />
                
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Report an issue on GitHub"
                android:textAppearance="?attr/textAppearanceBody1"
                android:textColor="#4285F4"
                android:textStyle="bold" />
        </LinearLayout>
        
        <!-- Divider -->
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="?android:attr/listDivider"
            android:layout_marginBottom="16dp" />
            
        <!-- Author info -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Author: Sandeep Wawdane"
            android:textAppearance="?attr/textAppearanceBody1"
            android:textColor="@color/text_primary"
            android:paddingHorizontal="12dp"
            android:paddingVertical="8dp"
            android:layout_marginBottom="16dp" />
            
        <!-- Divider -->
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="?android:attr/listDivider"
            android:layout_marginBottom="16dp" />

        <!-- LinkedIn link with icon -->
        <LinearLayout
            android:id="@+id/linkedinLinkTextView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="12dp"
            android:gravity="center_vertical"
            android:background="?attr/selectableItemBackground"
            android:clickable="true"
            android:focusable="true"
            android:layout_marginBottom="4dp">
            
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="ðŸ¤"
                android:textSize="16sp"
                android:layout_marginEnd="8dp" />
                
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Follow on LinkedIn"
                android:textAppearance="?attr/textAppearanceBody1"
                android:textColor="#4285F4"
                android:textStyle="bold" />
        </LinearLayout>
            
        <!-- Twitter link with icon -->
        <LinearLayout
            android:id="@+id/twitterLinkTextView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="12dp"
            android:gravity="center_vertical"
            android:background="?attr/selectableItemBackground"
            android:clickable="true"
            android:focusable="true">
            
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="ðŸ¦"
                android:textSize="16sp"
                android:layout_marginEnd="8dp" />
                
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Follow on Twitter/X"
                android:textAppearance="?attr/textAppearanceBody1"
                android:textColor="#4285F4"
                android:textStyle="bold" />
        </LinearLayout>

    </LinearLayout>
</ScrollView>